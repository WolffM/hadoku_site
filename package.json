    "@types/react-dom": "^19.2.2",
    "@wolffm/task": "^3.4.0",
    "@wolffm/task-ui-components": "^1.2.1",
    "@wolffm/themes": "1.1.8",
    "@wolffm/watchparty-ui": "^0.1.11",
    "astro": "^5.15.1",
    "chokidar": "^4.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
