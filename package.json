{
  "name": "hadoku_site",
  "version": "1.0.0",
  "type": "module",
  "description": "Astro-based controller app for hadoku micro-frontends with API server",
  "scripts": {
    "dev": "node scripts/generate-registry.mjs && astro dev",
    "dev:api": "node api/server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "build": "node scripts/generate-registry.mjs && astro build",
    "build:api": "echo 'API build complete'",
    "build:all": "npm run build && npm run build:api",
    "preview": "astro preview",
    "start": "node api/server.js",
    "generate-registry": "node scripts/generate-registry.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@astrojs/node": "^9.4.4",
    "astro": "^5.14.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "concurrently": "^8.2.2",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5"
  }
}
