    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "generate-registry": "node scripts/generate-registry.mjs",
    "update-task-bundle": "node scripts/update-task-bundle.mjs",
    "update-watchparty-bundle": "node scripts/update-watchparty-bundle.mjs",
    "update-themes-bundle": "node scripts/update-themes-bundle.mjs",
    "update-ui-components-bundle": "node scripts/update-ui-components-bundle.mjs",
    "prebuild": "pnpm run update-task-bundle && pnpm run update-watchparty-bundle && pnpm run update-themes-bundle && pnpm run update-ui-components-bundle && pnpm run generate-registry",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm run format:check && pnpm run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
