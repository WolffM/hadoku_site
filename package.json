{
  "name": "hadoku_site",
  "version": "1.0.0",
  "type": "module",
  "description": "Astro-based controller app for hadoku micro-frontends with API server",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "generate-registry": "node scripts/generate-registry.mjs",
    "update-contact-bundle": "node scripts/update-bundle.mjs @wolffm/contact-ui",
    "update-resume-bundle": "node scripts/update-bundle.mjs @wolffm/resume-bot",
    "update-task-bundle": "node scripts/update-bundle.mjs @wolffm/task",
    "update-watchparty-bundle": "node scripts/update-bundle.mjs @wolffm/watchparty-ui",
    "update-themes-bundle": "node scripts/update-bundle.mjs @wolffm/themes",
    "update-ui-components-bundle": "node scripts/update-bundle.mjs @wolffm/task-ui-components",
    "prebuild": "pnpm run update-contact-bundle && pnpm run update-resume-bundle && pnpm run update-task-bundle && pnpm run update-watchparty-bundle && pnpm run update-themes-bundle && pnpm run update-ui-components-bundle && pnpm run generate-registry",
    "contact:fetch": "node scripts/fetch-contact-submissions.mjs",
    "contact:stats": "node scripts/fetch-contact-submissions.mjs --stats",
    "test": "pnpm -r --filter \"./workers/*\" run test",
    "test:watch": "pnpm -r --filter \"./workers/*\" run test:watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm run format:check && pnpm run lint",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@astrojs/node": "^9.5.0",
    "@astrojs/react": "^4.4.2",
    "@astrojs/tailwind": "^6.0.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@wolffm/contact-ui": "^1.0.17",
    "@wolffm/resume-bot": "^1.1.8",
    "@wolffm/task": "^3.4.6",
    "@wolffm/task-ui-components": "^1.2.4",
    "@wolffm/themes": "1.1.15",
    "@wolffm/watchparty-ui": "^0.1.11",
    "astro": "^5.15.1",
    "chokidar": "^4.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx,astro}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
