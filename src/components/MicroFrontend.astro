---
// Reusable Micro-Frontend Page Component
import mfLoaderScript from './mf-loader.js?raw';
import hadokuHeaderScript from './hadoku-header.js?raw';

interface Props {
  appName: string;
  title?: string;
  showHeader?: boolean;
  showHomeButton?: boolean;
}

const { 
  appName,
  title = `Hadoku - ${appName.charAt(0).toUpperCase() + appName.slice(1)}`,
  showHeader = false,
  showHomeButton = true
} = Astro.props;
---

<!-- Full-screen container with no overflow -->
<div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; overflow: hidden;">
  <!-- Isolated container for micro-frontend -->
  <div id="root" data-app={appName} style="all: initial; display: block; width: 100%; height: 100%;"></div>
  
  <!-- Home button overlay (optional) -->
  {showHomeButton && (
    <a 
      href="/" 
      style="
        position: fixed;
        top: 1rem;
        left: 1rem;
        z-index: 9999;
        padding: 0.5rem 1rem;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        text-decoration: none;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        font-weight: 500;
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      "
      onmouseover="this.style.background='rgba(0, 0, 0, 0.85)'; this.style.transform='translateY(-1px)'"
      onmouseout="this.style.background='rgba(0, 0, 0, 0.7)'; this.style.transform='translateY(0)'"
    >
      <span style="font-size: 1.2rem;">‚Üê</span>
      <span>Home</span>
    </a>
  )}
</div>

<!-- React peer dependencies for micro-frontends -->
<script type="importmap">
  {
    "imports": {
      "react": "https://esm.sh/react@19.0.0",
      "react-dom/client": "https://esm.sh/react-dom@19.0.0/client"
    }
  }
</script>

<!-- Header component (optional) -->
{showHeader && <script is:inline set:html={hadokuHeaderScript} />}

<!-- Micro-frontend loader -->
<script is:inline set:html={mfLoaderScript} />

<style>
  /* Ensure full-screen micro-frontend */
  #root {
    width: 100%;
    height: 100%;
  }
</style>
